DirectoryIndex index.php
IndexIgnore .htaccess */.??*

ErrorDocument 404 /?page=404
Options +FollowSymLinks +ExecCGI

<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteCond %{REQUEST_URI} !^/?(assets)/
  RewriteRule ^(.*)$ index.php [QSA,PT,L]
</IfModule>

<Limit GET POST>
order deny,allow
deny from all
allow from all
</Limit>

<Limit PUT DELETE>
order deny,allow
deny from all
</Limit>
